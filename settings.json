{
    "debug.inlineValues": true, //デバッグないに行内に変数値を表示
    "editor.acceptSuggestionOnEnter": "off", // サジェストをEnterで確定させる（OffのときはTabキーで確定させる）
    "editor.dragAndDrop": false, // ドラッグ&ドロップで選択範囲のテキストを移動できるようにする
    "editor.formatOnSave": true, // 入力した行を自動でフォーマット
    "editor.renderControlCharacters": true, // 制御文字を表示
    "editor.renderWhitespace": "all", // エディター上での空白文字の表示方法
    "files.insertFinalNewLine": true, // ファイル保存時に行末に改行を挿入
    "files.trimFinalNewLines": true, // ファイル保存時に最終行以降の空行を削除
    "files.trimTrailingWhitespace": true, // ファイル保存時に各行の末尾にある半角スペースを削除
    "search.showLineNumbers": true, // 検索ビューの検索結果に行数を併記
    // ファイルを開いたときにプレビューモード（そのままのウィンドウで開く）設定。
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.iconTheme": "material-icon-theme", // VSCodeのファイルアイコンテーマ
    "workbench.startupEditor": "readme", // 起動時に表示するエディターの指定。READMEが含まれる場合には、それを開き、含まれない場合にはWelcomeページを開く
    "[html]": {
        "editor.tabSize": 2,
    },
    "[css]": {
        "editor.tabSize": 2,
    },
}

{
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "material-icon-theme",
    "gitlens.hovers.currentLine.over": "line",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIX",
        "FIXME",
        "TODO",
        "MEMO",
        "XXX",
    ],
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "iconColour": "#fff",
        "type": "line", // ハイライトされる範囲
        "foreground": "#fff",
        "background": "#000",
        "opacity": 75,  // 透明度
    },
    "todo-tree.highlights.customHighlight": {
        "BUG": {
            "icon": "bug",
            "iconColour": "#00f",
            "background": "#00f",
        },
        "HACK": {
            "icon": "tools",
        },
        "FIXME": {
            "icon": "flame"
        },
        "FIX": {
            "iconColour": "#008000",
            "background": "#008000",
        },
        "XXX": {
            "icon": "$(close)"
        },
        "TODO": {
            "iconColour": "#ffa500",
            "background": "#ffa500",
        },
        "MEMO": {
            "iconColour": "#808080",
            "background": "#808080",
        },
    },
    "better-comments.multilineComments": true,  // 複数行のコメントにも対応
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
    ],
    "auto-rename-tag.activationOnLanguage": [
        "*"
    ],
}